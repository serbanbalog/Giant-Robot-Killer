<Window x:Class="Giant_Robot_Killer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="ThreeDBorderWindow"
        ResizeMode="CanResize"
        WindowState="Maximized">
    <Grid x:Name="MainPageGrid" MinHeight="1000" MinWidth="1900" SizeChanged="MainGrid_SizeChanged">
        <Grid.Background>Black</Grid.Background>
        <Grid x:Name="ContentGrid" ClipToBounds="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </Grid>

        <Button Content="Tick" Margin="0, 0,5,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100"
                Height="25" Click="TickButtonClick" />
        <Button Content="Button" Margin="0, 0,110,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100"
                Height="25" Click="ReturnToMainMenu" />
        <ListBox x:Name="ListBox1" HorizontalAlignment="Left" Height="100" Margin="15,0,0,15"
                 VerticalAlignment="Bottom" Width="500" />
    </Grid>
</Window>