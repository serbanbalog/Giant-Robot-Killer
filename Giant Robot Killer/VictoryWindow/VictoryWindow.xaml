<Window x:Class="Giant_Robot_Killer.VictoryWindow.VictoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="VictoryWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="40">
            <TextBlock x:Name="VictoryText" Foreground="Gold" FontSize="36"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextAlignment="Center" FontWeight="Bold"/>
            <Button Content="Close" HorizontalAlignment="Center" Margin="0,40,0,0"
                    VerticalAlignment="Bottom" Padding="10,5"
                    Click="OnCloseClicked"/>
        </Grid>

    </Grid>
</Window>
