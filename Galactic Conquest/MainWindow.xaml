<Window x:Class="Galactic_Conquest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="ThreeDBorderWindow"
        ResizeMode="CanResize"
        WindowState="Maximized"
        SizeChanged="MainGrid_SizeChanged">
    <Grid x:Name="MainPageGrid">
        <Canvas x:Name="ContentGrid" ClipToBounds="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Canvas.Background>Black</Canvas.Background>
        </Canvas>
    </Grid>
</Window>